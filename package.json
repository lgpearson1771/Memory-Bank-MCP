{
  "name": "memory-bank-generator-mcp",
  "version": "1.0.0",
  "description": "An intelligent MCP server that automatically generates, maintains, and evolves comprehensive memory bank files for any software project",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node scripts/test-server.js",
    "test:integration": "jest --config config/jest.integration.config.js",
    "test:security": "jest --config config/jest.security.config.js",
    "lint": "echo 'Linting disabled - TypeScript compilation provides type checking'",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory-bank",
    "documentation",
    "ai-assistant",
    "project-analysis",
    "automation",
    "hackathon",
    "microsoft"
  ],
  "author": "lgpearson1771",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgpearson1771/Memory-Bank-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/lgpearson1771/Memory-Bank-MCP/issues"
  },
  "homepage": "https://github.com/lgpearson1771/Memory-Bank-MCP#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "dependency-tree": "^10.0.9",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "marked": "^11.1.1",
    "simple-git": "^3.20.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}
